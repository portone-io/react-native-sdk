{
  "name": "@portone/react-native-sdk",
  "main": "./lib/module/index.js",
  "type": "module",
  "exports": {
    ".": {
      "source": "./src/index.tsx",
      "types": "./lib/typescript/index.d.ts",
      "default": "./lib/module/index.js"
    },
    "./package.json": "./package.json",
    "./plugin": "./app.plugin.js"
  },
  "packageManager": "pnpm@10.10.0+sha512.d615db246fe70f25dcfea6d8d73dee782ce23e2245e3c4f6f888249fb568149318637dca73c2c5c8ef2a4ca0d5657fb9567188bfab47f566d1ee6ce987815c39",
  "version": "0.5.1",
  "description": "PortOne SDK for React Native",
  "keywords": [
    "react-native",
    "ios",
    "android",
    "PortOne",
    "payment",
    "포트원",
    "결제 연동"
  ],
  "homepage": "https://github.com/portone-io/react-native-sdk#readme",
  "bugs": {
    "url": "https://github.com/portone-io/react-native-sdk/issues"
  },
  "license": "(Apache-2.0 OR MIT)",
  "author": "PortOne <tech.support@portone.io> (https://portone.io)",
  "contributors": [
    "kiwiyou <kiwiyou@portone.io> (https://github.com/kiwiyou)"
  ],
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "app.plugin.js",
    "*.podspec",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/portone-io/react-native-sdk.git"
  },
  "scripts": {
    "test": "jest",
    "typecheck": "tsc",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli android/build lib",
    "prepare": "bob build"
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/compat": "^1.2.9",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.26.0",
    "@evilmartians/lefthook": "^1.11.9",
    "@expo/config-plugins": "^8.0.11",
    "@react-native/eslint-config": "^0.79.2",
    "@react-native/typescript-config": "^0.79.2",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.1.2",
    "commitlint": "^19.8.1",
    "del-cli": "^6.0.0",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "react": "19.1.0",
    "react-native": "^0.79.2",
    "react-native-builder-bob": "^0.40.6",
    "typescript": "5.8.3"
  },
  "peerDependencies": {
    "@portone/browser-sdk": "*",
    "react": "*",
    "react-native": "*",
    "react-native-webview": "*"
  },
  "types": "./lib/typescript/index.d.ts",
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "codegenConfig": {
    "name": "ReactNativeSdkSpec",
    "type": "modules",
    "jsSrcsDir": "src",
    "android": {
      "javaPackageName": "io.portone.sdk.reactnative"
    }
  }
}
